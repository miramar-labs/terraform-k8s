{
    "clusters": [
        {
            "nodes": [
                {% for host in groups.gfsnas %}{
                    "node": {
                        "hostnames": {
                            "manage": [
                                "{{host}}"
                            ],
                            "storage": [
                                "{{ hostvars[host].ansible_host }}"
                            ]
                        },
                        "zone": 1
                    },
                    "devices": [
                        "{{_gfs_device}}"
                    ]
                }{% if not loop.last %},{% endif %}
                {% endfor %}
            ]
        }
    ]
}