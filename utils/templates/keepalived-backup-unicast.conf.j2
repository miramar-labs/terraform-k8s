! Configuration File for keepalived
global_defs {
    router_id {{_rid}}
    script_user root
}
vrrp_script haproxy-check {
    script "/usr/bin/killall -0 haproxy"
    interval 2
    weight 20
}
vrrp_instance VI_1 {
    state BACKUP
    interface {{_iface}}
     unicast_src_ip {{ ansible_host }}
     unicast_peer {
        {% for host in unicast_peers %}
            {{hostvars[host].ansible_host}}
        {% endfor %}
    }
    virtual_router_id 51
    priority {{_pri_backup}}
    advert_int 2
    authentication {
        auth_type PASS
        auth_pass {{_auth}}
    }
    virtual_ipaddress {
        {{ hostvars[groups['vip'][0]]['ansible_host'] }}
    }
    track_script {
       haproxy-check
    }
}